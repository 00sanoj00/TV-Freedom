<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:glassview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/maincolour"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_height="200"
        app:scale_base_width="400">


        <ImageView
            android:layout_width="399dp"
            android:layout_height="233dp"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="384dp"
            android:layout_marginStart="384dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/ic_freedom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:scale_height="290"
            app:scale_left="53"
            app:scale_top="140"
            app:scale_width="290" />

        <ahmadrosid.com.lib.CustomTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="63dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontPath="@string/Pooch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_height="60"
            app:scale_left="9"
            app:scale_textsize="40"
            app:scale_top="25"
            app:scale_width="380" />

        <ahmadrosid.com.lib.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="63dp"
            android:gravity="center"
            android:text="@string/by"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontPath="@string/Pooch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_height="60"
            app:scale_left="15"
            app:scale_textsize="40"
            app:scale_top="480"
            app:scale_width="380" />

        <ahmadrosid.com.lib.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="63dp"
            android:gravity="center"
            android:text="@string/jhone"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:fontPath="@string/Pooch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_height="60"
            app:scale_left="18"
            app:scale_textsize="40"
            app:scale_top="520"
            app:scale_width="380" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>